[Unit]
Description=RPI TUI Application (runs on tty1)
After=network.target multi-user.target
Wants=multi-user.target

[Service]
Type=simple
# Run as root (no User directive)
Environment=PYTHONUNBUFFERED=1
# Use venv python when installed to /opt/rpi-lab/.venv
Restart=on-failure
ExecStartPre=/bin/sleep 10
WorkingDirectory=/opt/rpi-lab/tui
RestartSec=5
ExecStart=/opt/rpi-lab/.venv/bin/python /opt/rpi-lab/tui/rpi_tui.py
Restart=on-failure
StandardInput=tty
StandardOutput=inherit
TTYPath=/dev/tty1
TTYReset=yes
TTYVHangup=yes

[Install]
WantedBy=multi-user.target
